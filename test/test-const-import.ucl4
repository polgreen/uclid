module common {
  type word_t = bv8;
  const k1_word_t : word_t;
  axiom k1_word_t == 1bv8;
}

module main {
  var sum : common :: word_t;
  var num : common :: word_t;

  init {
    sum := 1bv8;
    num := common::k1_word_t;
  }
  
  next {
    sum := sum + 1bv8;
    num := num + common::k1_word_t;
  }
  
  property sum_num : sum == num;
  
  control {
    print_module;
    initialize;
    simulate(5);
    decide;
    print_results;
  }
}