module main
{
  input a, b : int;
  var inited : bool;
  output sum : int;
  
  init {
    inited = false;
  }
  next {
	inited = true;    
    sum = a + b;
  }
  
  property p1[LTL] : G(inited ==> (sum == a + b));
  // This property is obviously not satisfied, but we 
  // won't include it in the call to the 'bmc' command below.
  property p2[LTL] : G(false);
  
  
  control {
    vobj = bmc[p1] (3);
    check;
    print_results;
  }
}