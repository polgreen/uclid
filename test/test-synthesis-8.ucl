/** This is an example to test UCLID5's invariant synthesis.
  */

module main
{
  var x, y, z : integer;
  
  init {
    x = 0;
    y = 1;
    // z = -1;
  }
  
  next {
    x' = x + 1;
    y' = x + y;
    // z' = (z - z) - 1;
  }
  
  invariant always_positive: (y >= 0);
  
  control {
    // print_module;
    synthesize_invariant[LIA];
  }
}
